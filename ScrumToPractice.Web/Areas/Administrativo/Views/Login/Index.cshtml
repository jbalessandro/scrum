@model ScrumToPractice.Web.Areas.Administrativo.Models.LoginUsuario

@{
    ViewBag.Title = "Index";
}

<div class="container" style="margin-top:40px">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong> Acesse para continuar</strong>
                </div>
                <div class="panel-body">
                    <form role="form" action="#" method="POST">
                        <div class="text-danger">
                            @Html.ValidationSummary()
                        </div>
                        @Html.Hidden("returnUrl", (string)ViewBag.ReturnUrl)
                        <fieldset>
                            <div class="row">
                                <div class="text-center">
                                    <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120" alt="">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="glyphicon glyphicon-user"></i>
                                            </span>
                                            @Html.TextBoxFor(x => x.Login, new { @class = "form-control", @placeholder = "Usuário", @autofocus = true })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="glyphicon glyphicon-lock"></i>
                                            </span>
                                            @Html.PasswordFor(x => x.Senha, new { @class = "form-control", @placeholder = "Senha" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" class="btn btn-lg btn-primary btn-block" value="Acessar">
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

